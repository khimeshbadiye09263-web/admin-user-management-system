<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-900 via-purple-900 to-indigo-900 min-h-screen">

    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">üë• User Management</h1>
            <p class="text-gray-300">Manage all users in the system</p>
        </div>

        <!-- Navigation -->
        <div class="flex flex-wrap gap-4 mb-8">
            <a href="/admin/dashboard"
                class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-600 hover:to-purple-700 transform hover:scale-105 transition duration-200 shadow-lg">
                üè† Dashboard
            </a>
            <a href="/logout"
                class="px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transform hover:scale-105 transition duration-200 shadow-lg">
                üö™ Logout
            </a>
        </div>

        <!-- Search Bar -->
        <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-2xl p-6 mb-8">
            <form method="GET" action="/admin/users-page" class="flex gap-4">
                <input type="text" name="search" value="<%= search || '' %>" placeholder="üîç Search by name or email..."
                    class="flex-1 px-6 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner" />
                <button type="submit"
                    class="px-8 py-3 bg-gradient-to-r from-purple-500 to-pink-600 text-white font-semibold rounded-lg hover:from-purple-600 hover:to-pink-700 transform hover:scale-105 transition duration-200 shadow-lg">
                    Search
                </button>
                <% if (search) { %>
                    <a href="/admin/users-page"
                        class="px-8 py-3 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600 transform hover:scale-105 transition duration-200 shadow-lg">
                        Clear
                    </a>
                    <% } %>
            </form>
        </div>

        <!-- Users Table -->
        <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-2xl overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
                            <th class="px-6 py-4 text-left font-semibold">Name</th>
                            <th class="px-6 py-4 text-left font-semibold">Email</th>
                            <th class="px-6 py-4 text-left font-semibold">Cast</th>
                            <th class="px-6 py-4 text-left font-semibold">Birth Date</th>
                            <th class="px-6 py-4 text-left font-semibold">Role</th>
                            <th class="px-6 py-4 text-center font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users.length===0) { %>
                            <tr>
                                <td colspan="6" class="px-6 py-8 text-center text-gray-300">
                                    <div class="text-4xl mb-2">üîç</div>
                                    <p class="text-lg">No users found</p>
                                    <% if (search) { %>
                                        <p class="text-sm mt-2">Try a different search term</p>
                                        <% } %>
                                </td>
                            </tr>
                            <% } else { %>
                                <% users.forEach((user, index)=> { %>
                                    <tr
                                        class="border-b border-gray-600 hover:bg-white hover:bg-opacity-5 transition duration-150">
                                        <td class="px-6 py-4 text-gray-200">
                                            <div class="font-semibold">
                                                <%= user.name %>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-gray-300">
                                            <%= user.email %>
                                        </td>
                                        <td class="px-6 py-4 text-gray-300">
                                            <%= user.cast || 'N/A' %>
                                        </td>
                                        <td class="px-6 py-4 text-gray-300">
                                            <%= user.birthDate ? new Date(user.birthDate).toLocaleDateString() : 'N/A'
                                                %>
                                        </td>
                                        <td class="px-6 py-4">
                                            <% if (user.role==='admin' ) { %>
                                                <span
                                                    class="inline-block px-3 py-1 bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-xs font-bold rounded-full shadow-md">
                                                    üëë ADMIN
                                                </span>
                                                <% } else { %>
                                                    <span
                                                        class="inline-block px-3 py-1 bg-gradient-to-r from-blue-400 to-cyan-500 text-white text-xs font-bold rounded-full shadow-md">
                                                        üë§ USER
                                                    </span>
                                                    <% } %>
                                        </td>
                                        <td class="px-6 py-4 text-center">
                                            <div class="flex gap-2 justify-center">
                                                <a href="/admin/edit-user/<%= user._id %>"
                                                    class="px-4 py-2 bg-blue-500 text-white text-sm font-semibold rounded-lg hover:bg-blue-600 transform hover:scale-105 transition duration-200 shadow">
                                                    ‚úèÔ∏è Edit
                                                </a>
                                                <button onclick="deleteUser('<%= user._id %>', '<%= user.name %>')"
                                                    class="px-4 py-2 bg-red-500 text-white text-sm font-semibold rounded-lg hover:bg-red-600 transform hover:scale-105 transition duration-200 shadow">
                                                    üóëÔ∏è Delete
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages> 1) { %>
            <div class="mt-8 flex justify-center items-center gap-2">
                <% if (pagination.hasPrev) { %>
                    <a href="/admin/users-page?page=<%= pagination.currentPage - 1 %><%= search ? '&search=' + search : '' %>"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                        ‚Üê Previous
                    </a>
                    <% } %>

                        <div class="flex gap-2">
                            <% for (let i=1; i <=pagination.totalPages; i++) { %>
                                <% if (i===pagination.currentPage) { %>
                                    <span class="px-4 py-2 bg-purple-600 text-white rounded-lg font-bold">
                                        <%= i %>
                                    </span>
                                    <% } else if (i===1 || i===pagination.totalPages || (i>= pagination.currentPage - 2
                                        && i <= pagination.currentPage + 2)) { %>
                                            <a href="/admin/users-page?page=<%= i %><%= search ? '&search=' + search : '' %>"
                                                class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition">
                                                <%= i %>
                                            </a>
                                            <% } else if (i===pagination.currentPage - 3 || i===pagination.currentPage +
                                                3) { %>
                                                <span class="px-4 py-2 text-gray-400">...</span>
                                                <% } %>
                                                    <% } %>
                        </div>

                        <% if (pagination.hasNext) { %>
                            <a href="/admin/users-page?page=<%= pagination.currentPage + 1 %><%= search ? '&search=' + search : '' %>"
                                class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                                Next ‚Üí
                            </a>
                            <% } %>
            </div>
            <% } %>
    </div>

    <script src="/js/admin-users.js"></script>

</body>

</html>