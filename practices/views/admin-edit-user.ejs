<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-900 via-indigo-900 to-purple-900 min-h-screen">

    <div class="container mx-auto px-4 py-8 max-w-2xl">
        <!-- Header -->
        <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-2xl p-8 mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">‚úèÔ∏è Edit User</h1>
            <p class="text-gray-300">Update user information</p>
        </div>

        <!-- Navigation -->
        <div class="flex flex-wrap gap-4 mb-8">
            <a href="/admin/users-page"
                class="px-6 py-3 bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-600 hover:to-purple-700 transform hover:scale-105 transition duration-200 shadow-lg">
                ‚Üê Back to Users
            </a>
            <a href="/admin/dashboard"
                class="px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transform hover:scale-105 transition duration-200 shadow-lg">
                üè† Dashboard
            </a>
        </div>

        <!-- Edit Form -->
        <div class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl shadow-2xl p-8">
            <form action="/admin/update-user/<%= user._id %>" method="POST" class="space-y-6">

                <!-- User ID Display (read-only) -->
                <div>
                    <label class="block text-gray-300 text-sm font-semibold mb-2">
                        User ID
                    </label>
                    <input type="text" value="<%= user._id %>" disabled
                        class="w-full px-4 py-3 bg-gray-700 text-gray-400 rounded-lg cursor-not-allowed" />
                    <p class="text-gray-400 text-xs mt-1">This field cannot be edited</p>
                </div>

                <!-- Name Field -->
                <div>
                    <label for="name" class="block text-gray-300 text-sm font-semibold mb-2">
                        Name <span class="text-red-400">*</span>
                    </label>
                    <input type="text" id="name" name="name" value="<%= user.name %>" required minlength="3"
                        maxlength="30"
                        class="w-full px-4 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner"
                        placeholder="Enter full name" />
                    <p class="text-gray-400 text-xs mt-1">3-30 characters</p>
                </div>

                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-gray-300 text-sm font-semibold mb-2">
                        Email <span class="text-red-400">*</span>
                    </label>
                    <input type="email" id="email" name="email" value="<%= user.email %>" required
                        class="w-full px-4 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner"
                        placeholder="user@example.com" />
                    <p class="text-gray-400 text-xs mt-1">Valid email format required</p>
                </div>

                <!-- Role Field -->
                <div>
                    <label for="role" class="block text-gray-300 text-sm font-semibold mb-2">
                        Role <span class="text-red-400">*</span>
                    </label>
                    <select id="role" name="role" required
                        class="w-full px-4 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner">
                        <option value="user" <%=user.role==='user' ? 'selected' : '' %>>üë§ User</option>
                        <option value="admin" <%=user.role==='admin' ? 'selected' : '' %>>üëë Admin</option>
                    </select>
                    <p class="text-gray-400 text-xs mt-1">Choose user access level</p>
                </div>

                <!-- Cast Field -->
                <div>
                    <label for="cast" class="block text-gray-300 text-sm font-semibold mb-2">
                        Cast <span class="text-red-400">*</span>
                    </label>
                    <input type="text" id="cast" name="cast" value="<%= user.cast %>" required
                        class="w-full px-4 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner"
                        placeholder="Enter cast" />
                </div>

                <!-- Birth Date Field -->
                <div>
                    <label for="birthDate" class="block text-gray-300 text-sm font-semibold mb-2">
                        Birth Date <span class="text-red-400">*</span>
                    </label>
                    <input type="date" id="birthDate" name="birthDate"
                        value="<%= user.birthDate ? new Date(user.birthDate).toISOString().split('T')[0] : '' %>"
                        required
                        class="w-full px-4 py-3 bg-white bg-opacity-90 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-purple-500 shadow-inner" />
                </div>

                <!-- Action Buttons -->
                <div class="flex gap-4 pt-4">
                    <button type="submit"
                        class="flex-1 px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-bold rounded-lg hover:from-green-600 hover:to-emerald-700 transform hover:scale-105 transition duration-200 shadow-lg">
                        üíæ Save Changes
                    </button>
                    <a href="/admin/users-page"
                        class="px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transform hover:scale-105 transition duration-200 shadow-lg text-center">
                        ‚ùå Cancel
                    </a>
                </div>

                <!-- Warning Notice -->
                <div class="mt-6 bg-yellow-500 bg-opacity-20 border-l-4 border-yellow-500 p-4 rounded">
                    <p class="text-yellow-200 text-sm">
                        ‚ö†Ô∏è <strong>Note:</strong> Changing a user's role to "Admin" will grant them full access to the
                        admin panel.
                    </p>
                </div>
            </form>
        </div>

        <!-- Danger Zone (Delete User) -->
        <div class="mt-8 bg-red-500 bg-opacity-10 border border-red-500 rounded-2xl p-6">
            <h3 class="text-xl font-bold text-red-400 mb-2">‚ö†Ô∏è Danger Zone</h3>
            <p class="text-gray-300 mb-4">Permanently delete this user. This action cannot be undone.</p>
            <button onclick="deleteUser('<%= user._id %>', '<%= user.name %>')"
                class="px-6 py-3 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transform hover:scale-105 transition duration-200 shadow-lg">
                üóëÔ∏è Delete User
            </button>
        </div>
    </div>

    <script>
        async function deleteUser(userId, userName) {
            if (!confirm(`‚ö†Ô∏è ARE YOU ABSOLUTELY SURE?\n\nYou are about to permanently delete:\n\nüë§ ${userName}\n\nThis action CANNOT be undone!`)) {
                return;
            }

            // Second confirmation
            if (!confirm(`Last chance! Type DELETE to confirm.\n\nClick OK to proceed with deletion.`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/user/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include'
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ User deleted successfully!');
                    window.location.href = '/admin/users-page';
                } else {
                    alert('‚ùå Error: ' + data.message);
                }
            } catch (error) {
                alert('‚ùå Error deleting user: ' + error.message);
            }
        }
    </script>

</body>

</html>